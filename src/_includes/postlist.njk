<ul class="post-list">
{# Use 'postslist' if it exists, otherwise fallback to the full collection #}
{% for post in (postslist or collections.posts) %}
  <li>
    {% if not post.data.published %}
      {# Note: set `published: true` in the frontmatter to remove this #}
      <span class="draft-badge">ðŸš§</span>
    {% endif %}
    <a href="{{ post.url }}">{{ post.data.title }}</a>
    <span class="reading-time">{{ post.templateContent | readingTime }}</span>
    <time>{{ post.date | readableDate }}</time>
  </li>
{% endfor %}
</ul>
